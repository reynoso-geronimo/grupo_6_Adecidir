<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
  <style>
    .edit-form{
      display: flex;
      flex-direction: column;
    }
  </style>
  <body>
    
    <%- include('../partials/header') %>

    <main>
      <form action="/product/edit/:id"  class="edit-form">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" value="<%= producto.nombre %>">
        <label for="nombre">Descripcion</label>
        <textarea name="descripcion" id="descripcion" placeholder="<%= producto.descripcion %>" cols="30" rows="10"></textarea>

        <label for="talle-s">Talle S</label>
        <input type="number" name="s" id="talle-s" value="<%= producto.talles %>">

        <label for="talle-m">Talle M</label>
        <input type="number" name="m" id="talle-m" value="<%= producto.tallem %>">

        <label for="talle-l">Talle L</label>
        <input type="number" name="l" id="talle-l" value="<%= producto.tallel %>">
        
        <label for="talle-xl">Talle XL</label>
        <input type="number" name="xl" id="talle-xl" value="<%= producto.tallexl %>">
        
        <label for="talle-xxl">Talle XXL</label>
        <input type="number" name="xxl" id="talle-xxl" value="<%= producto.tallexxl %>">
        <label for="precio">Precio</label>
        <input type="text" name="precio" id="precio" value="<%= producto.precio %>">
        <input type="file" name="imagenes" id="imagen">
        <button type="submit">Actualizar</button>
      </form>
      <!-- TODO ELIMINAR PRODUCTO -->
      <button type="submit">Eliminar</button>
    </main>
    
    <%- include('../partials/footer.ejs') %>
    
  </body>

  </html>