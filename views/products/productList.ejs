<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main class="product-list">
      <% if (productos.length > 0) { %>
        <% productos.forEach(producto => { %>
          <article class="article-card">
            <a href="/product/<%=producto.id%>">
              <% if (producto.Imagenes && producto.Imagenes.length > 0) { %>
                <img src="/images/productos/<%=producto.Imagenes[0].nombre %>" />
              <% } else { %>
                <!-- probando si funciona, si anda hay que sacar o agregar una imagen de error porque puse un barbijo  -->
                <img src="/images/barbijo.jpg" />
              <% } %>
              <div class="article-card-info">
                <h4><%= producto.nombre %></h4>
                <h4 class="precio-lista">$ <%= producto.precio %></h4>
              </div>
            </a>
          </article>
        <% }) %>
      <% } else { %>
        <h1>No hay productos en la categor√≠a</h1>
      <% } %>
    </main>
    
      <%- include('../partials/footer.ejs') %>
  </body>

</html>