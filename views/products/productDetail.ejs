<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main >


      <section class="product-container">
        <div class="galeria">
          <div class="imagenes-producto">
            <img src="../<%= producto.imagenes[0]%>" alt="producto" class="m1" />
            <img src="../<%= producto.imagenes[1]%>" alt="producto" class="m2" />
            <img src="../<%= producto.imagenes[2]%>" alt="producto" class="m3" />
            <img src="../<%= producto.imagenes[3]%>" alt="producto" class="m4" />
          </div>
          <div class="radio-selector">
            <input type="radio" id="selector1" name="radios" checked />
            <label for="selector1"></label>
            <input type="radio" id="selector2" name="radios" />
            <label for="selector2"></label>
            <input type="radio" id="selector3" name="radios" />
            <label for="selector3"></label>
            <input type="radio" id="selector4" name="radios" />
            <label for="selector4"></label>
          </div>
        </div>
        <div class="info-product">
          <h2>
           <%= producto.nombre %>
            <a href="a">
              <i class="fa-regular fa-star"></i>
            </a>
            <a href="a" class="share"
              ><i class="fa-solid fa-share-nodes"></i
            ></a>
          </h2>

          <p class="description">
            <%= producto.descripcion %>
          </p>
          <div class="product-talle-select">
            <p class="price">$<%= producto.precio %></p>
            <h3>Seleccione un talle</h3>
            <form action="/cart" method="get">
              <div >
                <div class="radio-button">
                  <input type="radio" id="radio1" name="radios" value="s" />
                  <label for="radio1">S</label>
                  <input type="radio" id="radio2" name="radios" value="m" />
                  <label for="radio2">M</label>
                  <input type="radio" id="radio3" name="radios" value="l" />
                  <label for="radio3">L</label>
                  <input type="radio" id="radio4" name="radios" value="xl" />
                  <label for="radio4">XL</label>
                  <input type="radio" id="radio5" name="radios" value="xxl" />
                  <label for="radio5">XXL</label>
                </div>

                <button type="submit" class="boton-negro">
                  Agregar al Carrito
                </button>
                

               

              </div>
            </form>
            <a href="/product/<%=producto.id%>/editform/"><button>EDITAR PRODUCTO</button></a>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %>
      
    <script>
      //entiendo que asi como no se debe poner css en el html tampoco js pero es una solucion pasajera para lograr el selector de imagenes
      //dios como sufri buscando esto no recomiendo pasar el feriado haciendo esto

      const radios = document.querySelectorAll('input[name="radios"]');
      const images = {
        selector1: document.querySelector(".m1"),
        selector2: document.querySelector(".m2"),
        selector3: document.querySelector(".m3"),
        selector4: document.querySelector(".m4"),
      };

      radios.forEach(function (radio) {
        radio.addEventListener("change", function () {
          const selectedRadio = document.querySelector(
            'input[name="radios"]:checked'
          );
          for (const key in images) {
            if (selectedRadio && selectedRadio.id === key) {
              images[key].style.display = "block";
            } else {
              images[key].style.display = "none";
            }
          }
        });
      });
    </script>
  </body>
</html>
