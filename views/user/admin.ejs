<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main>
      <div class="admin-actions"><a href="/product/crearproducto"><button>NUEVO PRODUCTO <i  class="fa-solid fa-plus"></i> </button></a> <a href=""><button>ADMINISTRAR USUARIOS <i class="fa-solid fa-users"></i></button></a></div>

      <table class="admin-prod-table">
        <tr>
            <th></th>
          <th>PRODUCTO</th>
          <th>PRECIO</th>
          <th>CATEGORIA</th>
          <th>ESTADO</th>
          <TH>ACCIONES</TH>
        </tr>
        <% if (productos.length>0) { %> <% productos.forEach(producto=> { %>

        <tr>
          <td><img src="/images/productos/<%=producto.imagenes[0] %>"/></td>
          <td><%= producto.nombre %></td>
          <td><%= producto.precio %></td>
          <td><%= producto.categoria %></td>
          <td><% if (producto.borrado) { %>
           BAJA
           <% } else { %>
            ACTIVO
          <% } %></td>
          <td><a href="/product/<%= producto.id %>"><button>VER</button></a><a href="/product/<%= producto.id %>/editform"><button>EDITAR</button></a></td>
          <% }) %> <% } else {%>
          <h1>No hay productos</h1>
          <% } %>
        </tr>
      </table>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
