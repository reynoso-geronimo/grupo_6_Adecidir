<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

  <body class="body-register">
    <%- include('../partials/header') %>

    <main class="register">
      <% if (locals.errors) { %>
        <div class="errores">

          <% for(error in errors) { %>
            <p>
              <%= errors[error].msg %>
            </p>
            
          <% } %>
          
        </div>
        <% } %>

      <h1><img
        src="/../images/avatar/<%= usuario.avatar %>"
        alt=""
        width="60px"
      /> Edita tu informacion</h1>
      <form action="/user/profile/edit" method="post" enctype="multipart/form-data" id="formularioEdicionPerfil">

        <input type="text" name="nombre" placeholder="Nombre" value="<%= usuario.nombre %>" id="nombre"/>
        <span class="error-message" id="error-nombre"></span>

        <input type="text" name="apellido" placeholder="Apellido" value="<%= usuario.apellido %>" id="apellido"/>
        <span class="error-message" id="error-apellido"></span>

        <input type="text" name="direccion" placeholder="Direccion" <% if (usuario.direccion) { %> value="<%= usuario.direccion %>"<% } %> id="direccion"/>
        <span class="error-message" id="error-direccion"></span>

        <input type="text" name="telefono" placeholder="Telefono" <% if (usuario.telefono) { %> value="<%= usuario.telefono %>"<% } %> id="telefono"/>
        <span class="error-message" id="error-telefono"></span>

        <div class="register-avatar">
        <label for="new-avatar"><i class="fa-solid fa-cloud-arrow-up"></i>Nueva Imagen de perfil</label>
        <input type="file" name="avatar" id="new-avatar" />
        <input type="submit"  class="boton-negro" value="Editar"/>
      </form>

       
    </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/profileEdit.js"></script>
  </body>
</html>
